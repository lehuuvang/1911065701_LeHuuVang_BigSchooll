@model _1911065701_LeHuuVang_BigSchool.ViewModels.FollowingViewModel
@{
    ViewBag.Title = "FollowingMeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Following</h2>

<div class="row">
    <ul class="course">
        @foreach (var follow in Model.Followings)
        {
            <li>
                <div class="details">
                    <span>
                        <br /> 
                        @follow.Name 
                        <br />
                    </span>
                </div>
            </li>
        }
    </ul>
</div>


